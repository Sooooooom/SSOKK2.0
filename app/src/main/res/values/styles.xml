<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDatePickerDialog"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="MyDialogTheme"
        parent="Theme.AppCompat.Light.Dialog">
    </style>

    <style name="CalendarView" parent="Theme.AppCompat">
        <item name="colorAccent">@color/intro_dot</item>
        <item name="colorPrimary">@color/intro_dot</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:weekNumberColor">@android:color/black</item>
    </style>

    <style name="CalendarWeekText">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>

