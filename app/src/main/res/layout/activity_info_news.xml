<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.info.InfoNews">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="69.7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/alarm_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_know_inNews"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:lineSpacingExtra="1.7sp"
                android:text="당뇨병 상식"
                android:textColor="#cbcbcb"
                android:textSize="13.3sp" />

            <Button
                android:id="@+id/btn_news_inNews"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:lineSpacingExtra="1.7sp"
                android:text="당뇨병 뉴스"
                android:textColor="#707070"
                android:textSize="13.3sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/split1"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/alarm_tab_unclicked" />

            <ImageView
                android:id="@+id/split4"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/alarm_tab_clicked" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/article1" />

                    <Button
                        android:id="@+id/btn_article_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="17dp"
                        android:background="@android:drawable/screen_background_light"
                        android:lineSpacingExtra="1.7sp"
                        android:text="당뇨병 초기 약 복용 거르면 사망률 최대 45% 높아져..." />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/split_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/article2" />

                <Button
                    android:id="@+id/btn_article_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/screen_background_light"
                    android:lineSpacingExtra="1.7sp"
                    android:text='당뇨병성 신장병 원인 찾았다…UNIST "예방치료 가능"' />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/split_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/article3" />

                <Button
                    android:id="@+id/btn_article_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/screen_background_light"
                    android:lineSpacingExtra="1.7sp"
                    android:text="한국인 당뇨병 특이 유전자 변이 찾았다" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/split_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/article4" />

                <Button
                    android:id="@+id/btn_article_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/screen_background_light"
                    android:lineSpacingExtra="1.7sp"
                    android:text="당뇨병 먹거리…좋음 5 Vs 나쁨 6" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>