<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:orientation="vertical"
    tools:context=".UserInfo">

            <TextView
                android:id="@+id/title01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="81.7dp"
                android:layout_marginTop="80dp"
                android:text="본인 정보를 알려주세요"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="81.7dp"
                android:layout_marginTop="10dp"
                android:text="관리를 도와드리기 위해 입력받는 정보입니다" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="29.3dp"
                android:text="성별" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.3dp"
                android:layout_marginLeft="81.7dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/femaleBtn"
                    android:layout_width="66.4dp"
                    android:layout_height="29.8dp"
                    android:layout_marginRight="11.3dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/female_clicked" />

                <ImageButton
                    android:id="@+id/maleBtn"
                    android:layout_width="66.4dp"
                    android:layout_height="29.8dp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/male" />
            </LinearLayout>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="29.3dp"
                android:text="나이" />

            <EditText
                android:id="@+id/ageTxt"
                android:layout_width="249dp"
                android:layout_height="35dp"
                android:layout_marginLeft="81.7dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="29.3dp"
                android:text="키" />

            <EditText
                android:id="@+id/heightTxt"
                android:layout_width="249dp"
                android:layout_height="35dp"
                android:layout_marginLeft="81.7dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="29.3dp"
                android:text="몸무게" />

            <EditText
                android:id="@+id/weightTxt"
                android:layout_width="249dp"
                android:layout_height="35dp"
                android:layout_marginLeft="81.7dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="249dp"
                android:layout_height="33.3dp"
                android:layout_marginLeft="81.7dp"
                android:layout_marginTop="40dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/next_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="104dp"
                android:layout_marginLeft="85dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/havdID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정이 있으신가요?" />

                <Button
                    android:id="@+id/goSignInBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="로그인"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>