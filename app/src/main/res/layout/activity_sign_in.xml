<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginLeft="143dp"
        android:layout_marginTop="56.7dp"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/signInTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="56.7dp"
        android:text="로그인"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="248.7dp"
        android:layout_height="33.3dp"
        android:layout_marginLeft="81.7dp"
        android:layout_marginTop="29.3dp"
        android:layout_marginRight="81.7dp"
        android:background="@drawable/sign_in_box"
        android:ems="10"
        android:hint="   이메일"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pwTxt"
        android:layout_width="248.7dp"
        android:layout_height="33.3dp"
        android:layout_marginLeft="81.7dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="81.7dp"
        android:background="@drawable/sign_in_box"
        android:ems="10"
        android:hint="   비밀번호"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="248.7dp"
        android:layout_height="33.3dp"
        android:layout_marginLeft="81.7dp"
        android:layout_marginTop="53.3dp"
        android:background="@drawable/sign_in_btn" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/askAccountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/createAccountBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="회원가입" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/findAccountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <Button
            android:id="@+id/findPWBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="비밀번호 찾기" />

    </LinearLayout>

</LinearLayout>